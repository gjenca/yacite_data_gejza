@article{ ISI:000244305200005,
Author = {Shang, Yun and Li, Yongming},
Title = {{Generalized ideals and supports in pseudo effect algebras}},
Journal = {{SOFT COMPUTING}},
Year = {{2007}},
Volume = {{11}},
Number = {{7}},
Pages = {{641-645}},
Month = {{MAY}},
Abstract = {{In this paper we introduce the definitions of generalized ideals and
   generalized filters in pseudo effect algebras. From the generalized
   ideals (filters), we obtain some equivalent characterization of ideals
   (filters). The relationships among generalized ideals, ideals and local
   ideals are studied in detail. We also establish an isomorphism between
   the set of supports and the set of generalized ideals of pseudo effect
   algebras.}},
DOI = {{10.1007/s00500-006-0126-y}},
ISSN = {{1432-7643}},
Unique-ID = {{ISI:000244305200005}},
}

@article{ ISI:000183729700006,
Author = {Avallone, A and Vitolo, P},
Title = {{Congruences and ideals of effect algebras}},
Journal = {{ORDER-A JOURNAL ON THE THEORY OF ORDERED SETS AND ITS APPLICATIONS}},
Year = {{2003}},
Volume = {{20}},
Number = {{1}},
Pages = {{67-77}},
Abstract = {{This paper is devoted to a general investigation of congruences and
   ideals in effect algebras. One of our main results is the existence of
   an order isomorphism between Riesz congruences and Riesz ideals. We also
   answer an open question of Dvurecenskij and Pulmannova by showing that
   an ideal is a Riesz ideal if and only if it is closed under generalized
   Sasaki projections.}},

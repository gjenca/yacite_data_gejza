@article{ ISI:000231626200010,
Author = {Pulmannova, S},
Title = {{On fuzzy hidden variables}},
Journal = {{FUZZY SETS AND SYSTEMS}},
Year = {{2005}},
Volume = {{155}},
Number = {{1}},
Pages = {{119-137}},
Month = {{OCT 1}},
Note = {{7th International Conference on Fuzzy Sets Theory and Applications
   (FSTA), Liptovsky, SLOVAKIA, JAN 26-30, 2004}},
Organization = {{Mil Acad Liptovsky Mikulas; Slovak Univ Technol; Slovak Acad Sci, Math
   Inst; EUSFLAT Assoc}},
Abstract = {{A fuzzy system is introduced as a couple (E, S) consisting of a
   sigma-orthocomplete effect algebra E and an order-determining set S of
   sigma-additive states on E, which represents a physical system also
   taking into account the unsharp quantum measurements. Hidden variables
   and quasi-hidden variables for fuzzy systems are defined in terms of
   embedding the system into a fuzzy system based on a tribe of fuzzy sets
   and a fuzzy system based on a sigma-MV algebra, respectively. Relations
   to the existence of a sufficient supply of sigma-additive, resp.
   finitely additive prime states (which generalize the notion of
   dispersion-free states) are shown. Some Bell-type inequalities are
   defined and their relations to hidden variables are shown. Some examples
   are discussed. (C) 2005 Elsevier B.V. All rights reserved.}},
DOI = {{10.1016/j.fss.2005.05.016}},
ISSN = {{0165-0114}},
Unique-ID = {{ISI:000231626200010}},
}

@article{ ISI:000231646300001,
Author = {Pulmannova, S},
Title = {{Commutator-finite D-lattices}},
Journal = {{ORDER-A JOURNAL ON THE THEORY OF ORDERED SETS AND ITS APPLICATIONS}},
Year = {{2004}},
Volume = {{21}},
Number = {{2}},
Pages = {{91-105}},
Month = {{MAY}},
Abstract = {{Commutator-finite D-lattices as a generalization of commutator-finite
   orthomodular lattices are defined and their properties studied. A
   necessary and sufficient condition is found under which a D-lattice can
   be uniquely decomposed into a direct product of an MV-algebra and
   finitely many irreducible D-lattices which are not MV-algebras. This
   condition is satisfied if the D-lattice is orthocomplete or if all
   commutators are sharp. A condition under which a block-finite D-lattice
   is commutator-finite is found. Some necessary and sufficient conditions
   for the existence of states and valuations are proved, and some examples
   are given.}},
DOI = {{10.1007/s11083-004-5257-0}},
ISSN = {{0167-8094}},
Unique-ID = {{ISI:000231646300001}},
}

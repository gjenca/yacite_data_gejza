Pages = {{1003-1006}},
Month = {{JUL}},
Abstract = {{Let (E, perpendicular to, circle plus, 0, 1) be a lattice effect algebra
   and tau(i) its interval topology. In this work we show that if the
   operation circle plus is continuous with respect to tau(i), then tau(i)
   is Hausclorff. In addition, we also show that if (E, perpendicular to,
   circle plus, circle minus, 1) is a complete MV-effect algebra and tau(i)
   is a Hausdorff topology, then the operations circle plus, circle minus,
   boolean OR and boolean OR are tau(i) continuous. (C) 2009 Elsevier Ltd.
   All rights reserved.}},
DOI = {{10.1016/j.aml.2009.01.008}},
ISSN = {{0893-9659}},
Unique-ID = {{ISI:000266894100006}},
}


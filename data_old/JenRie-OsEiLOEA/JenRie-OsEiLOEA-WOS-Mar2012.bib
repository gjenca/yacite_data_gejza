@article{ ISI:000284562000003,
Author = {Kalina, Martin},
Title = {{ON CENTRAL ATOMS OF ARCHIMEDEAN ATOMIC LATTICE EFFECT ALGEBRAS}},
Journal = {{KYBERNETIKA}},
Year = {{2010}},
Volume = {{46}},
Number = {{4}},
Pages = {{609-620}},
Abstract = {{If element z of a lattice effect algebra (E,circle plus,0,1) is central,
   then the interval {[}0, z] is a lattice effect algebra with the new top
   element z and with inherited partial binary operation circle plus. It is
   a known fact that if the set C(E) of central elements of E is an atomic
   Boolean algebra and the supremum of all atoms of C(E) in E equals to the
   top element of E, then E is isomorphic to a direct product of
   irreducible effect algebras ({[}16]). In {[}10] Paseka and Riecanova
   published as open problem whether C(E) is a bifull sublattice of an
   Archimedean atom c lattice effect algebra E. We show that there exists a
   lattice effect algebra (E,circle plus,0,1) with atomic C(E) which is not
   a bifull sublattice of E. Moreover, we show that also B(E), the center
   of compatibility, may not be a bifull sublattice of E.}},
ISSN = {{0023-5954}},
Unique-ID = {{ISI:000284562000003}},
}

@article{ ISI:000287421300002,
Author = {Kalina, Martin},
Title = {{MAC NEILLE COMPLETION OF CENTERS AND CENTERS OF MAC NEILLE COMPLETIONS
   OF LATTICE EFFECT ALGEBRAS}},
Journal = {{KYBERNETIKA}},
Year = {{2010}},
Volume = {{46}},
Number = {{6, SI}},
Pages = {{935-947}},
Abstract = {{If element z of a lattice effect algebra (E, circle plus, 0, 1) is
   central, then the interval {[}0, z] is a lattice effect algebra with the
   new top element z and with inherited partial binary operation circle
   plus. It is a known fact that if the set C(E) of central elements of E
   is an atomic Boolean algebra and the supremum of all atoms of C(E) in E
   equals to the top element of E, then E is isomorphic to a subdirect
   product of irreducible effect algebras ({[}18]). This means that if
   there exists,a MacNeille completion (E) over cap of E which is its
   extension (i.e. E is densely embeddable into (E) over cap) then it is
   possible to embed E into a direct product of irreducible effect
   algebras. Thus E inherits some of the properties of (E) over cap. For
   example, the existence of a state in (E) over cap implies the existence
   of a state in E. In this context, a natural question arises if the
   MacNeille completion of the center of E (denoted as MC(C(E))) is
   necessarily the same as the center of (E) over cap, i.e., if MC(C(E)) =
   C((E) over cap) is necessarily true. We show that the equality is not
   necessarily fulfilled. We find a necessary condition under which the
   equality may hold. Moreover, we show also that even the completeness of
   C(E) and its bifullness in E is not sufficient to guarantee the
   mentioned equality.}},
ISSN = {{0023-5954}},
Unique-ID = {{ISI:000287421300002}},
}

@article{ ISI:000266894100006,
